<h1>My Portfolio</h1>

<div class="search-area">
    <h3>Search Stock:</h3 >
    <%= form_tag search_stock_path, method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9 no-right-pagging">
                <%= text_field_tag :stock, params[:stock], autofocus:true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>


<% if @stock %>
    <div class="card card-header result-block col-sm-6">
        <strong>Symbol:</strong> <%= @stock.ticker %>
        <strong>Company name:</strong> <%= @stock.name %>
        <strong>Last price:</strong> <%= @stock.last_price %>
    </div>
<% end %>


